
<table width='100%' border='0' cellspacing='0' cellpadding='0'>
	<tr>
		<td >
			<h1>
			<% if controller.action_name == "show" %>
				Keyword: <%= @list.keyword %>
			<% elsif controller.action_name == "edit" %>
				Edit Keyword
			<% else %>
				New Keyword
			<% end %>
			</h1>
		</td>
	</tr>
</table>

<div id="content">
	<table width='100%' border='0' cellpadding='0' cellspacing='0'>
	<% form_for(@list) do | f | %>
		<%# f.error_messages %>
		<%= render 'shared/error_messages', :object => f.object %>
		<table width=100% border=0 cellpadding=0 cellspacing=0>
			<tr>
				<td colspan=2 class='curved'>Keyword details</td>
			</tr>
			<tr>
				<td width="40%" class="Label" valign="top"><%= f.label :keyword, "Keyword:" %></td>
				<td class="Field">
				<% if controller.action_name == "show" %>
					<%= @list.keyword %></td>
				<% else %>
					<%= f.text_field :keyword, :size => 30 %>
				<% end %>
			</tr>

			<tr>
				<td class="Label" valign="top"><%= f.label :value, "Keyword value:" %></td>
				<td class="Field">
					<% if controller.action_name == "show" %>
						<%= @list.value.gsub(/\n/, "<br>").html_safe %></td>
					<% else %>
						<%= f.text_area :value, :size => "50x10" %>
					<% end %>
			</tr>
	</table>
	
	<table width='100%' border='0' cellpadding='0' cellspacing='0'>
			<tr>
				<td align=right>
					<% if controller.action_name != "show" %>
						<p><%= f.submit "Submit" %></p>
					<% end %>
				</td>
			</tr>
	</table>
	<% end %>
</div>