
<table width=100% border='0' cellspacing='0' cellpadding='0'>
	<tr>
		<td width=40%><h1>Book: <%= @book.title %></h1></td>
	</tr>
</table>

<table width=100% border='0' cellpadding='0' cellspacing='0'>
	<% form_for(@book) do | f | %>
	<tr>
		<td width=90%>
			<table width=95% border='0' cellpadding='0' cellspacing='0'>
				<tr>
					<td class="Label" valign="top"><%= f.label :title, "Title:" %></td>
					<td class="Field"><%= @book.title %></td>
				</tr>
				<tr>
					<td class="Label" valign="top"><%= f.label :author, "Author:" %></td>
					<td class="Field"><%= @book.author %></td>
				</tr>
				<tr>
					<td class="Label" valign="top"><%= f.label :description, "Description:" %></td>
					<td class="Field"><%= @book.description %></td>
				</tr>
				<tr>
					<td class="Label" valign="top"><%= f.label :classification, "Classification:" %></td>
					<td class="Field"><%= @book.classification.gsub(/\n/, "<br>") %></td>
				</tr>
			</table>
		</td>
		
		<td>
			<%= render :partial => "outline" %>
		</td>
	</tr>
	<% end %>
</table>



